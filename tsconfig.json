{
    "compilerOptions": {
        "module": "CommonJS",
        "lib": ["ESNext"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowJs": false,
        "esModuleInterop": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@config/*": [
                "src/config/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
        }
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ]
}
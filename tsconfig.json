{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ESNext"],
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"],
      "@dto/*": ["dto/*"],
      "@errors/*": ["errors/*"],
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
